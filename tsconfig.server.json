{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc/server",
    "target": "ES2022",
    "types": ["node", "jest"],
  },
  "files": [
    "src/main.server.ts",
    "server.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts"  // Exclude test files
  ],
  "angularCompilerOptions": {
    "entryModule": "src/app/app.server.module#AppServerModule"
  }
}
